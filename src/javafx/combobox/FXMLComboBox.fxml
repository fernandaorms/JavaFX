<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="373.0" prefWidth="637.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.combobox.FXMLComboBoxController">
   <children>
      <ComboBox fx:id="comboBoxClients" layoutX="345.0" layoutY="61.0" onAction="#selectComboBoxClientItem" prefWidth="150.0" promptText="Select the client..." />
      <Button fx:id="buttonRemove" layoutX="532.0" layoutY="61.0" mnemonicParsing="false" onAction="#removeClient" style="-fx-background-color: red;" text="Remove" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="buttonAdd" layoutX="46.0" layoutY="204.0" mnemonicParsing="false" onAction="#addClient" prefHeight="25.0" prefWidth="62.0" style="-fx-background-color: green;" text="Add" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="textFieldClientName" layoutX="45.0" layoutY="61.0" />
      <Label layoutX="45.0" layoutY="30.0" text="Name" />
      <Label layoutX="45.0" layoutY="116.0" text="Number" />
      <TextField fx:id="textFieldClientNumber" layoutX="45.0" layoutY="147.0" />
   </children>
</AnchorPane>
